<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_paysage"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/app_name"
        android:textColor="#ff3452"
        android:textSize="200sp"/>
        
    <Button
        android:id="@+id/button_com_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_commandes_manuelles"
        android:textSize="50sp"/>
    
    <Button
        android:id="@+id/button_creer_editer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/button_creation_edition_mission"
        android:textSize="50sp"/>
    
    <Button
        android:id="@+id/button_lancer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/button_lancer_mission"
        android:textSize="50sp"/>
    
    <Button
        android:id="@+id/button_arreter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/button_arreter_mission"
        android:textSize="50sp"/>

</LinearLayout>