<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond_portrait"
    android:orientation="vertical" >
    
    <TextView
    android:id="@+id/lblTitre"
    android:layout_width="560dp"
    android:layout_height="90dp"
    android:layout_marginTop="60dp"
	android:layout_marginLeft="450dp" />

    <TextView
    android:id="@+id/lblNom"
    android:layout_width="360dp"
    android:layout_height="90dp"
    android:layout_marginTop="190dp"
	android:layout_marginLeft="150dp"/>

    <EditText
        android:id="@+id/txtNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="800dp"
        android:hint="@string/editNom"/>    
    
    
    <TextView
    android:id="@+id/lblEmail"
    android:layout_width="360dp"
    android:layout_height="90dp"
    android:layout_marginTop="290dp"
	android:layout_marginLeft="150dp"/>
    
    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:layout_marginTop="290dp"
        android:layout_marginLeft="800dp"
        android:hint="@string/editEmail" />
    
    <TextView
    android:id="@+id/lblRetourDepart"
    android:layout_width="360dp"
    android:layout_height="90dp"
    android:layout_marginTop="390dp"
	android:layout_marginLeft="150dp"
	android:textSize="30dp"
    android:text="Retour du robot :" />
    
    <TextView
    android:id="@+id/lblPhotoArrivee"
    android:layout_width="360dp"
    android:layout_height="90dp"
    android:layout_marginTop="490dp"
	android:layout_marginLeft="150dp"
	android:textSize="30dp"
    android:text="Photo Arrivee :" />

    <CheckBox
        android:id="@+id/cbxRetourDepart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblRetourDepart"
        android:layout_alignBottom="@+id/lblRetourDepart"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignParentRight="true"
        android:checked="true"
        android:text="@string/cbxRetour" />

    <CheckBox
        android:id="@+id/cbxPhotoArrivee"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblPhotoArrivee"
        android:layout_alignBottom="@+id/lblPhotoArrivee"
        android:layout_alignLeft="@+id/cbxRetourDepart"
        android:checked="true"
        android:text="@string/cbxRetour" />




    
    <Button
    android:id="@+id/btnSuivant"
    android:layout_width="150dp"
    android:layout_height="70dp"
    android:layout_marginTop="580dp"
	android:layout_marginLeft="370dp"/>

    <Button
    android:id="@+id/btnAnnuler"
    android:layout_width="150dp"
    android:layout_height="70dp"
    android:layout_alignBaseline="@+id/btnSuivant"
    android:layout_alignBottom="@+id/btnSuivant"
    android:layout_alignLeft="@+id/cbxPhotoArrivee" />
    
</RelativeLayout>